/* pages/mine/mine.wxss */
.detail-popup {
    position: relative;
}

.detail-btn {
    width: 100vw;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 0;
    top: 0;
}

.detail-btn-item1 {
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.detail-btn-item2 {
    margin-right: 30rpx;
    margin-top: 20rpx;
    opacity: 0;
}

.mine-top {
    display: flex;
    justify-content: space-around;
    font-size: 35rpx;
}

.mine-mount {
    margin-top: 20rpx;
}

.mine-avt {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 20rpx;
    margin-top: 100rpx;
    height: 200rpx;
}

.mine-btn {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 80vw;
    margin-top: 20rpx;
}

.mine-btn0 {
    margin-top: 40rpx;
    font-size: 35rpx;
    height: 100rpx;
}

.email-container {
    display: flex;
    flex-direction: column;
    align-content: space-between;
}

.email-main {
    height: 360rpx;
    padding-top: 40rpx;
}

.email-list {
    display: flex;
    flex-direction: column;
    align-items: center;

}


.email-list-item {
    width: 80vw;
    margin-top: 20rpx;
    text-align: center;
    font-size: 30rpx;
    border-bottom: solid 1rpx gray;
    padding-bottom: 10rpx;
}

.email-btn {
    width: 80vw;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    margin-top: 20rpx;
}