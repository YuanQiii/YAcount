.key-container {
    height: 450rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.key {
    display: flex;
    justify-content: center;
    width: 660rpx;
    margin-top: 20rpx;
}


.key-row {
    display: flex;
}

.key-cell {
    height: 70rpx;
    width: 150rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;

}

.key-left {
    margin-left: 0rpx;
}

.key-clear {
    width: 150rpx;
    height: 158rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.key-confirm {
    width: 150rpx;
    height: 158rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.record {
    position: relative;
}


.bill {
    position: fixed;
    top: 100rpx;
    display: flex;
}


.categories {
    margin-top: 130rpx;
    overflow: scroll;
}

.note-container {
    width: 660rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: -20rpx;
    margin-top: -20rpx;
}

.popup-top {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.popup-top-left {
    margin-left: 32rpx;
    color: #999;
    font-size: 14px;
}

.popup-top-left:hover {
    opacity: .7
}

.popup-top-right {
    margin-right: 32rpx;
    color: #576895;
    font-size: 14px;

}

.popup-top-right:hover {
    opacity: .7
}

.add-conteiner {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    line-height: 80rpx;
    padding: 20rpx;
}


.loading {
    width: 100vw;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bill {
    margin-top: 20rpx;
}


.bill-icon {
    position: absolute;
    font-size: 50rpx;
    top: -10rpx;
    left: 20rpx;
}

.bill-input {
    width: 100vw;
    height: 70rpx;
    opacity: .5;
    position: absolute;
}

.bill-input-text {
    position: absolute;
    left: 70rpx;
    top: -15rpx;
    font-size: 70rpx;
    width: 80vw;
    display: flex;
    align-items: center;
}

.bill-input-cursor {
    width: 5rpx;
    height: 70rpx;
    background-color: gray;
    display: inline-block;
    margin-left: 10rpx;
    animation: blink 1s steps(1) infinite;
    -webkit-animation: blink 1s steps(1) infinite;
}

@keyframes blink {

    0%,
    100% {
        opacity: 0;
    }

    50% {
        opacity: 1;
    }
}

.bill-input-line {
    display: inline-block;
    width: 60vw;
    height: 1rpx;
    background-color: grey;
    position: absolute;
    left: 0;
    top: 90rpx;
}

.category-container {
    padding: 10rpx;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    font-size: 26rpx;
}

.category-box {
    display: flex;
    flex: 0 0 20%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 150rpx;
}

.select {
    box-shadow: 0 0 5px #333;
}

.detail-btn {
    width: 100vw;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 0;
    top: 0;
}

.detail-btn-item1 {
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-size: 40rpx;
}

.detail-btn-item2 {
    margin-right: 30rpx;
    margin-top: 20rpx;
    font-size: 40rpx;
}

.popup-text {
    margin-top: 20rpx;
}

.note-btn {
    width: 320rpx;
}

.btn {
    height: 80rpx;
    font-size: 50rpx;
    width: 100vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.btn0 {
    margin-left: 40rpx;
}

.btn1 {
    margin-right: 40rpx;
}

.btn-text {
    font-size: 35rpx;
}

.add-btn {
    width: 80vw;
    margin-top: 20rpx;
}