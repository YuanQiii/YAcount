/* pages/detail/detail.wxss */

.header {
    display: flex;
    justify-content: space-between;
    position: fixed;
    width: 100vw;
    z-index: 9999;
    top: 0;
}

.current-date {
    display: flex;
    width: 100%;
    font-size: 40rpx;
    margin-bottom: 10rpx;
    height: 100rpx;
    align-items: center
}

.main {
    margin-top: 100rpx;
}

.arrow {
    transition: .5s;
    -webkit-transition: .5s;
    -moz-transition: .5s;
    -ms-transition: .5s;
    -o-transition: .5s;
}

.arrow0 {
    margin-left: 20rpx;
}

.arrow1 {
    margin-left: 20rpx;
    transform: rotate(180deg);
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -ms-transform: rotate(180deg);
    -o-transform: rotate(180deg);
}

.current-amount {
    display: flex;
}


.detail-popup {
    position: relative;
}

.detail-tabs {
    width: 70vw;
    margin: auto;
}

.detail-btn {
    width: 100vw;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 0;
    top: 0;
}

.detail-btn-item1 {
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-size: 40rpx;
}

.detail-btn-item2 {
    margin-right: 30rpx;
    margin-top: 20rpx;
    font-size: 40rpx;
}

.detail-picker {
    margin-top: 15%;
}

.popup-datetime {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.popup-datetime-range {
    display: flex;
    margin-top: 30rpx;
    align-items: center;
}

.popup-detetime-btn {
    text-align: center;
    margin-top: 40rpx;
    display: flex;
    flex-direction: column;
    width: 400rpx;
}

.line {
    width: 30rpx;
    height: 5rpx;
    display: inline-block;
    background-color: #e54d42;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.date0 {
    font-size: 30rpx;
}

.btn {
    margin-bottom: 30rpx;
}

.detail-note {
    font-size: 22rpx;
    margin-left: 20rpx;
}

.detail-image {
    width: 1024rpx;
    height: 1024rpx;
}

.none-bill{
    margin-top: 200rpx;
    font-size: 35rpx;
}